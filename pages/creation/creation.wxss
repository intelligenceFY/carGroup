.container1{
  display: flex;
  flex-direction: column;
  width: 650rpx;
  justify-content: flex-start;
  margin: 0 0 90rpx 50rpx;
}
.input_container{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
   align-self: center;
}
input{
  height: 70rpx;
  width: 580rpx;
  border: 1px solid #ccc;
  margin-top: 70rpx;
  border-radius: 5rpx;
  font-size: 24rpx;
}
.button_container{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 60rpx;
}
button{
  font-size: 22rpx;
  line-height: 80rpx;
  height: 80rpx;
  width: 120rpx;
}